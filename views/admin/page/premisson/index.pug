extends ../../layout/index.pug
include ../../mixi/mixi.pug
block main 
  h1(class="mb-4") Phân quyền
  +alert(messages.nice)
  +alertfaild(messages.error)
  if(records)
    div(data-records=records)

    div(class="text-right")
      button(
        type="submit"
        class="btn btn-primary mb-3"
        button-submit
      ) Cập nhật

    table(
      class="table table-hover table-sm"
      table-permissions
    )
      thead
        tr
          th Tính năng
          each item in records
            th(class="text-center") #{item.title}
      tbody
        tr(data-name="id" class="d-none")
          td
          each item in records
            td(class="text-center")
              input(type="text" value=item.id)

        //- Danh mục sản phẩm
        tr
          td(colspan="3" class="csstittlepermisson")
            b(class="p-10") Danh mục sản phẩm
        tr(data-name="products-category_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products-category_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        //- Hết Danh mục sản phẩm
        //- Danh sách sản phẩm
        tr
          td(colspan="4" class="csstittlepermisson")
            b Danh sách sản phẩm
        tr(data-name="products_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="products_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")

        //- Nhóm quyền
        tr
          td(colspan="4" class="csstittlepermisson")
            b Nhóm quyền
        tr(data-name="roles_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="roles_permissions")
          td Phân quyền
          each item in records
            td(class="text-center")
              input(type="checkbox")

        //- Tài Khoản
        tr
          td(colspan="4" class="csstittlepermisson") 
            b Tài Khoản
        tr(data-name="account_view")
          td Xem
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_create")
          td Thêm mới
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_edit")
          td Chỉnh sửa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_delete")
          td Xóa
          each item in records
            td(class="text-center")
              input(type="checkbox")
        tr(data-name="account_active")
          td Khóa Tài Khoản
          each item in records
            td(class="text-center")
              input(type="checkbox")


    form(
      form-change-permissions
      method="POST"
      action=`/${prefixAdmin}/premisson/handlepremisson?_method=PATCH`
      class="d-none"
    )
      div(class="form-group")
        input(
          type="text"
          class="form-control"
          name="role"
        )