mixin select-tree(items, level = 1)
  each item in items
    - const prefix = Array(level+1).join("----")
    option(value=item.id) #{prefix} #{item.title} #{prefix}
    if(item.children)
      +select-tree(item.children, level+1)

mixin selected(items, level = 1,parentid)
  each item in items
    - const prefix = Array(level+1).join("----")
    option(value=item.id selected=(item.id == parentid ? true : false)) #{prefix} #{item.title} #{prefix}
    div #{item.id} 
    div #{parentid}
    if(item.children)
      +selected(item.children, level+1,parentid)

mixin alert(data)
  if (data)
      div(
        class="alert alert-success"
        show-alert
      ) #{data} <span close-alert>x</span>
mixin alertfaild(data)
  if (data)
      div(
        class="alert alert-danger"
        show-alert
      ) #{data} <span close-alert>x</span>
      